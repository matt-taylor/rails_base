<h2 class='text-center'>Forgot your password?</h2>
<%= render "devise/shared/error_messages", resource: resource %>


<%= form_for(:user, as: :user, url: RailsBase.url_routes.user_password_path, html: { method: :post }) do |f| %>

	<div class="field form-group row">
	  <div class="col-md-10 offset-md-1">
    		<%= f.label :email, class: 'text-center' %><br />
	      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: 'form-control'%>
	    </div>
	  </div>
	</div>

  <div class="actions row">
    <div class="col-md-10 offset-md-1 text-center">
      <div class="row">
        <div class="col-md-9">
          <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-block" %>
        </div>
        <div class="col-md-3">
          <a class="btn btn-primary btn-block" href="<%= RailsBase.url_routes.new_user_session_path %>" role="button">Sign in</a>
        </div>
      </div>
    </div>
  </div>
<% end %>
